{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "radix": 0,
    "class-methods-use-this": 0,
    "no-param-reassign": 0,
    "consistent-return": 0,
    "comma-dangle": [
      "error",
      "never"
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "indent": [
      "error",
      "tab",
      {
        "ObjectExpression": 1
      }
    ],
    "camelcase": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "useTabs": true,
        "tabWidth": 2,
        "printWidth": 80
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ],
    "no-underscore-dangle": 0,
    "no-use-before-define": 0
  },
  "plugins": [
    "jsx-a11y",
    "import",
    "prettier",
    "react-hooks"
  ]
}