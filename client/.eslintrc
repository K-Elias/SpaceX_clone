{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "babelOptions": {
      "configFile": "../.babelrc"
    }
  },
  "ignorePatterns": [
    "node_modules",
    "./src/registerServiceWorker.js"
  ],
  "rules": {
    "radix": 0,
    "react/jsx-fragments": 0,
    "react/jsx-props-no-spreading": 0,
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/require-default-props": 0,
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/destructuring-assignment": 0,
    "multiline-ternary": [
      "error",
      "never"
    ],
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/label-has-associated-control": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "comma-dangle": [
      "error",
      "never"
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "indent": [
      "error",
      "tab",
      {
        "ObjectExpression": 1
      }
    ],
    "camelcase": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "useTabs": true,
        "tabWidth": 2,
        "printWidth": 80
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ],
    "no-underscore-dangle": 0,
    "react/jsx-uses-vars": 2,
    "react/button-has-type": 0,
    "no-use-before-define": 0
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "prettier",
    "react-hooks"
  ]
}